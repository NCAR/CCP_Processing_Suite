#!/bin/sh
#
# Store data on archival system
#
if [ $# -ne 0 ] ; then
  echo "Usage: store_to_archive"
  ./update_status error store_to_archive
  exit 1
fi
#
cd $CACHEDIR
if [ `ls CAT.*.nc | wc -l` -ne 0 ] ; then
  for cfile in `ls CAT.*.nc` ; do
    SFILE=`echo $CFILE | sed -e 's/^CAT\.//g'`
    $NCKS -4 -L 1 $CFILE $SFILE
    if [ $? -eq 0 ] ; then
      rm -f $CFILE
    else
      echo "netCDF-4 L 1 compression failed on "${CFILE}
    fi
  done
fi
../archive_write $ARCHIVE_PROC
#
cd $LOCAL_PROC
