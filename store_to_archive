#!/bin/sh
#
# Store data on archival system
#
if [ $# -ne 0 ] ; then
  echo "Usage: store_to_archive"
  exit 1
fi
#
cd $PROCDIR
#
if [ $DO_PROC -ne 0 ] ; then
  for e in `ls -d *d.d` ; do
    cd ${PROCDIR}/${e}
    if [ ! -f ./mss_write ] ; then
      ln -s -f ${BASEDIR}/mss_write .
    fi
    for g in `ls *.${YEARBEG}*cat*${YEAREND}*.nc` ; do
      ./mss_write $g $MSSPROC
    done
    cd $PROCDIR
  done
fi
#
if [ $DO_PROC -ne 0 ] ; then
  cd ${procdir}/IPCC
  if [ ! -f ./mss_write ] ; then
    ln -s -f ${BASEDIR}/mss_write .
  fi
  for g in `ls *.${YEARBEG}*cat*${YEAREND}*.nc` ; do
    ./mss_write $g $MSSIPCC
  done
  cd $PROCDIR
fi
