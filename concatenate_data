#!/bin/sh
#
# Concatenate years -> decades, decades -> all
#
if [ $# -ne 0 ] ; then
  echo "Usage: concatenate_data"
  exit 1
fi
#
cd $PROCDIR
#
if [ $DO_PROC -ne 0 ] ; then
  cd ${PROCDIR}
  for e in `ls -d *d.d` ; do
    cd ${PROCDIR}/${e}
    ../var_mon_to_year
    ../var_year_to_dec
    ../var_dec_to_all
    mv *.${YEARBEG}*cat*${YEAREND}*.nc $CACHEDIR
    cd ${PROCDIR}
  done
  cd ${PROCDIR}
fi
#
if [ $DO_IPCC -ne 0 ] ; then
  cd ${PROCDIR}/IPCC
  ./cf_var_ann_concat
  ./cf_var_dec_concat
  ./cf_var_all_concat
  mv *.${YEARBEG}*cat*${YEAREND}*.nc $CACHEDIR
fi
cd ${PROCDIR}
#
