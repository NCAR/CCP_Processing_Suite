#!/bin/sh
# List a directory on an archival system
# Arguments:
# 1 local file that has list
#
if [ $# -ne 1 ] ; then
  echo "Usage: mss_list local_list - REQUIRED"
  ./procstat.sh error mss_list
  exit 1
else
  ARCHIVE_L=$1
fi
#
# If hsi command exists, use it.
#
TEST4HSI=`which hsi 2<&1`
if [ $? -eq 0 ] ; then
  hsi -q "cd $ARCHIVE_HIST; ls -1 *.${HIST}.*" >& $ARCHIVE_L
  if [ $? -ne 0 ] ; then
    echo "Error on mss_list from "$ARCHIVE_HIST
    ./procstat.sh error mss_list
    exit 1
  fi
else
  echo "Cannot find hsi command."
  ./procstat.sh error mss_list
  exit 1
fi
