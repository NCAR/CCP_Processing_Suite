#!/bin/sh
#
# Write file(s) to archival tape
#
# Arguments:
# 1 directory on archival system to write file to
#
if [ $# = 1 ] ; then
  ARCHIVE_D=$1
else
  echo "archive_write ERROR - missing argument ARCHIVE_D"
  ../update_status error archive_write
  exit 1
fi
#
# If hsi command exists, use it.
#
HSI=`which hsi 2<&1`
if [ $? -ne 0 ] ; then
  echo "hsi command not found"
  ../update_status error archive_write
  exit 1
fi
#
# Use HSI to write files to ARCHIVE_D but directory for each field
#
echo "mkdir -p $ARCHIVE_D ; chmod 775 $ARCHIVE_D" > MKDIR
$HSI in MKDIR
echo ${ARCHIVE_D}" created. Ready." ; rm MKDIR
echo "cd $ARCHIVE_D ; put -d -U *nc ; chmod 644 *nc" > PUT
$HSI in PUT
if [ $? -eq 0 ] ; then
  echo "Files written to "${ARCHIVE_D}
  rm -f PUT 
else
  echo "Problem with HPSS on write. Stopping"
  ../update_status error archive_write
  exit 1
fi
